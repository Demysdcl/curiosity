<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_camera_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/photo"
        android:textStyle="bold"
        android:text="camera_name" />

    <TextView
        android:id="@+id/tv_earth_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/tv_camera_name"
        android:text="earth_date" />


    <TextView
        android:id="@+id/tv_rover_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/tv_earth_date"
        android:text="rover_name" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/tv_rover_name"
        android:text="like: 0" />

</RelativeLayout>